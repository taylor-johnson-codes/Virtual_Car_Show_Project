@model CarShow

<div class="container">
    <p>(Login/register nav bar)</p>

    <div class="row mb-2">
        <h2>Event Title: @Model.Title</h2>
    </div>

    <div class="row mb-2">
        <h4>Hosted by: @Model.ClubName</h4>
    </div>

    <div class="row">
        <h4>Start Date & Time:</h4>
    </div>
    <div class="row mb-2">
        <p>@Model.StartDateAndTime.ToString("MMM dd, yyyy @ hh:mm tt")</p>
    </div>

    <div class="row">
        <h4>End Date & Time:</h4>
    </div>
    <div class="row mb-2">
        <p>@Model.EndDateAndTime.ToString("MMM dd, yyyy @ hh:mm tt")</p>
    </div>

    <section id="video">
            <div class="container-fluid">
                <div class="d-flex justify-content-center">
                        <h3>Check out our livestream during the event!</h3>
                </div>
                <div class="d-flex justify-content-center">
                    <div class="video">
                        <div class="embed-responsive embed-responsive-16by9">
                            <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/Ox1XLgafKsE" allowfullscreen></iframe>
                        </div>
                    </div> 
                </div>    
            </div>
        </section>

    <div class="row mb-2">
        <h4>Registration Fee: $@Math.Round(Model.Fee, 2)</h4>
    </div>

    <div class="row">
        <h4>Location:</h4>
    </div>
    <div class="row">
        <h4>@Model.StreetAddress</h4>
    </div><div class="row mb-2">
        <h4>@Model.City, @Model.State @Model.ZipCode</h4>
    </div>

    <div class="row">
        <h4>Description:</h4>
    </div>
    <div class="row mb-2">
        <p>@Model.Description</p>
    </div>

    <a class="btn btn-info mb-2" asp-controller="CarShow" asp-action="Rules">Rules page</a>
    <br>
    <a class="btn btn-info mb-2" asp-controller="CarShow" asp-action="Raffles">Raffles page</a>
    <br>

    <div class="row">
        <h4>Registered Cars:</h4>
    </div>
    <div class="row">
        <ul>
        @if (Model.RegisteredCars != null)
        {
            @foreach (var item in Model.RegisteredCars)
            {
                <li>@item.Year @item.Make @item.Model owned by @item.Registerer.FirstName @item.Registerer.FirstName</li>
            }
        }
        </ul>
    </div>

    <p>Show winners if the car show date has passed</p>
</div>